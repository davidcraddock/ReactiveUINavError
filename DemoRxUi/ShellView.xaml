<reactiveUi:ReactiveWindow x:TypeArguments="demoRxUi:ShellViewModel" x:Class="DemoRxUi.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:reactiveUi="http://reactiveui.net" 
        xmlns:demoRxUi="clr-namespace:DemoRxUi"
        Title="{Binding Title}" Height="1080" Width="1920">
    <Grid>
        <reactiveUi:RoutedViewHost x:Name="ContentView">
            <reactiveUi:RoutedViewHost.DefaultContent>
                <Border Background="Gainsboro">
                    <TextBlock Text="No view loaded."></TextBlock>
                </Border>
            </reactiveUi:RoutedViewHost.DefaultContent>
        </reactiveUi:RoutedViewHost>
    </Grid>
</reactiveUi:ReactiveWindow>

